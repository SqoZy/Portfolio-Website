---
import type { CollectionEntry } from "astro:content";

import Game from "./Game.astro";

type Props = {
    posts: CollectionEntry<"game">[];
};

const { posts } = Astro.props;
---

<div
    class="grid grid-cols-2 gap-x-16 gap-y-32 max-md:grid-cols-1 max-sm:gap-y-14"
>
    {posts.map((post) => <Game post={post} />)}
</div>
